{
  "info": {
    "name": "NoSQL GraphQL API",
    "description": "Postman collection for testing the FastAPI + Strawberry GraphQL API backed by MongoDB.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://127.0.0.1:8000",
      "type": "string"
    },
    {
      "key": "apiSecret",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Root",
      "request": {
        "method": "GET",
        "header": [
                {
                  "key": "X-API-SECRET",
                  "value": "{{apiSecret}}"
                }
              ],
        "url": {
          "raw": "{{baseUrl}}/",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            ""
          ]
        }
      }
    },
    {
      "name": "GraphQL",
      "item": [
        {
          "name": "List Documents",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-API-SECRET",
                "value": "{{apiSecret}}"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query { listDocuments { id identifier type data } }",
                "variables": "{}"
              }
            },
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "graphql"
              ]
            }
          }
        },
        {
          "name": "Get Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-API-SECRET",
                "value": "{{apiSecret}}"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query GetDocument($identifier: String!, $type: String!) { getDocument(identifier: $identifier, type: $type) { id identifier type data } }",
                "variables": "{\n  \"identifier\": \"doc-1\",\n  \"type\": \"note\"\n}"
              }
            },
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "graphql"
              ]
            }
          }
        },
        {
          "name": "Create Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-API-SECRET",
                "value": "{{apiSecret}}"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation CreateDocument($identifier: String!, $type: String!, $data: String!) { createDocument(identifier: $identifier, type: $type, data: $data) { id identifier type data } }",
                "variables": "{\n  \"identifier\": \"doc-1\",\n  \"type\": \"note\",\n  \"data\": \"Hello world\"\n}"
              }
            },
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "graphql"
              ]
            }
          }
        },
        {
          "name": "Update Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-API-SECRET",
                "value": "{{apiSecret}}"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation UpdateDocument($identifier: String!, $type: String!, $newData: String) { updateDocument(identifier: $identifier, type: $type, newData: $newData) { id identifier type data } }",
                "variables": "{\n  \"identifier\": \"doc-1\",\n  \"type\": \"note\",\n  \"newData\": \"Updated text\"\n}"
              }
            },
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "graphql"
              ]
            }
          }
        },
        {
          "name": "Delete Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-API-SECRET",
                "value": "{{apiSecret}}"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation DeleteDocument($identifier: String!, $type: String!) { deleteDocument(identifier: $identifier, type: $type) }",
                "variables": "{\n  \"identifier\": \"doc-1\",\n  \"type\": \"note\"\n}"
              }
            },
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "graphql"
              ]
            }
          }
        },
        {
          "name": "List Documents (By Type)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "X-API-SECRET", "value": "{{apiSecret}}" }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query ListByType($type: String!) { listDocuments(type: $type) { id identifier type data } }",
                "variables": "{\n  \"type\": \"note\"\n}"
              }
            },
            "url": { "raw": "{{baseUrl}}/graphql", "host": ["{{baseUrl}}"], "path": ["graphql"] }
          }
        },
        {
          "name": "Create Documents (Batch)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "X-API-SECRET", "value": "{{apiSecret}}" }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation CreateDocuments($items: [CreateDocumentInput!]!) { createDocuments(items: $items) { id identifier type data } }",
                "variables": "{\n  \"items\": [\n    { \"identifier\": \"doc-1\", \"type\": \"note\", \"data\": \"Hello\" },\n    { \"identifier\": \"doc-2\", \"type\": \"note\", \"data\": \"World\" }\n  ]\n}"
              }
            },
            "url": { "raw": "{{baseUrl}}/graphql", "host": ["{{baseUrl}}"], "path": ["graphql"] }
          }
        },
        {
          "name": "Delete Documents (Batch)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "X-API-SECRET", "value": "{{apiSecret}}" }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation DeleteDocuments($type: String!, $identifiers: [String!]!) { deleteDocuments(type: $type, identifiers: $identifiers) }",
                "variables": "{\n  \"type\": \"note\",\n  \"identifiers\": [\n    \"doc-1\", \n    \"doc-2\"\n  ]\n}"
              }
            },
            "url": { "raw": "{{baseUrl}}/graphql", "host": ["{{baseUrl}}"], "path": ["graphql"] }
          }
        },
        {
          "name": "Get Documents (Batch)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "X-API-SECRET", "value": "{{apiSecret}}" }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query GetDocuments($type: String!, $identifiers: [String!]!) { getDocuments(type: $type, identifiers: $identifiers) { id identifier type data } }",
                "variables": "{\n  \"type\": \"note\",\n  \"identifiers\": [\n    \"doc-1\", \n    \"doc-2\"\n  ]\n}"
              }
            },
            "url": { "raw": "{{baseUrl}}/graphql", "host": ["{{baseUrl}}"], "path": ["graphql"] }
          }
        }
      ]
    }
  ]
}
